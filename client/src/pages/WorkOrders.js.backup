/* eslint-disable */
import React, { useState, useEffect } from 'react';
import { Plus, Search, Edit, Trash2, Eye, Clock, User, Car, MapPin, Tag, UserCheck } from 'lucide-react';
import { workOrdersAPI, workSessionsAPI, workOrderCategoriesAPI, attendanceAPI } from '../services/api';
import toast from 'react-hot-toast';

// Time utility functions
const timeToSeconds = (timeString) => {
  if (!timeString) return 0;
  const parts = timeString.split(':');
  const hours = parseInt(parts[0]) || 0;
  const minutes = parseInt(parts[1]) || 0;
  const seconds = parseInt(parts[2]) || 0;
  return hours * 3600 + minutes * 60 + seconds;
};

const secondsToTime = (totalSeconds) => {
  if (!totalSeconds) return '00:00:00';
  const hours = Math.floor(totalSeconds / 3600);
  const minutes = Math.floor((totalSeconds % 3600) / 60);
  const seconds = totalSeconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
};

const formatPreciseDuration = (totalSeconds) => {
  if (!totalSeconds) return '00:00:00';
  const hours = Math.floor(totalSeconds / 3600);
  const minutes = Math.floor((totalSeconds % 3600) / 60);
  const seconds = totalSeconds % 60;
  return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
};

const WorkOrders = () => {
  const [orders, setOrders] = useState([]);
  const [loading, setLoading] = useState(true);
  const [searchTerm, setSearchTerm] = useState('');
  const [statusFilter, setStatusFilter] = useState('all');
  const [priorityFilter, setPriorityFilter] = useState('all');
  const [showCreateModal, setShowCreateModal] = useState(false);
  const [showEditModal, setShowEditModal] = useState(false);
  const [selectedOrder, setSelectedOrder] = useState(null);
  const [editingOrder, setEditingOrder] = useState(null);
  const [orderSessions, setOrderSessions] = useState([]);
  const [orderAttendance, setOrderAttendance] = useState([]);
  const [activeTab, setActiveTab] = useState('orders'); // 'orders' or 'maintenance'
  const [maintenanceSessions, setMaintenanceSessions] = useState([]);
  const [startDate, setStartDate] = useState('');
  const [endDate, setEndDate] = useState('');

  useEffect(() => {
    loadOrders();
  }, [statusFilter, priorityFilter]);

  const loadOrders = async () => {
    try {
      setLoading(true);
      const params = {};
      if (statusFilter !== 'all') params.status = statusFilter;
      if (priorityFilter !== 'all') params.priority = priorityFilter;

      const response = await workOrdersAPI.getAll(params);
      setOrders(response.data?.data || response.data || []);
    } catch (error) {
      toast.error('Fehler beim Laden der Aufträge');
      console.error('Error loading orders:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleViewOrder = async (order) => {
    setSelectedOrder(order);
    try {
      // Load work sessions for this order
      const sessionsResponse = await workSessionsAPI.getHistory({ workOrderId: order.id });
      setOrderSessions(sessionsResponse.data);

      // No need to load attendance records - not relevant for work orders
      setOrderAttendance([]);
    } catch (error) {
      console.error('Error loading order sessions:', error);
      setOrderSessions([]);
      setOrderAttendance([]);
    }
  };

  const handleCreateOrder = () => {
    setShowCreateModal(true);
  };

  const handleEditOrder = (order) => {
    setEditingOrder(order);
    setShowEditModal(true);
  };

  const handleDeleteOrder = async (order) => {
    if (!window.confirm(`Sind Sie sicher, dass Sie den Auftrag "${order.order_number}" löschen möchten?`)) {
      return;
    }

    try {
      await workOrdersAPI.delete(order.id);
      toast.success('Auftrag erfolgreich gelöscht!');
      loadOrders(); // Reload the list
    } catch (error) {
      const errorMessage = error.response?.data?.error || 'Fehler beim Löschen des Auftrags';
      toast.error(errorMessage);
      console.error('Error deleting order:', error);
    }
  };

  const filteredOrders = orders.filter(order =>
    order.order_number.toLowerCase().includes(searchTerm.toLowerCase()) ||
    order.description?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    order.customer_name?.toLowerCase().includes(searchTerm.toLowerCase())
  );

  const getStatusColor = (status) => {
    switch (status) {
      case 'created': return 'bg-blue-100 text-blue-800';
      case 'in_progress': return 'bg-yellow-100 text-yellow-800';
      case 'completed': return 'bg-green-100 text-green-800';
      case 'cancelled': return 'bg-red-100 text-red-800';
      case 'on_hold': return 'bg-gray-100 text-gray-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  const getPriorityColor = (priority) => {
    switch (priority) {
      case 'urgent': return 'text-red-600';
      case 'high': return 'text-orange-600';
      case 'normal': return 'text-blue-600';
      case 'low': return 'text-green-600';
      default: return 'text-gray-600';
    }
  };

  const formatDuration = (minutes) => {
    const hours = Math.floor(minutes / 60);
    const mins = minutes % 60;
    return `${hours}h ${mins}m`;
  };

  const loadMaintenanceSessions = async () => {
    try {
      setLoading(true);
      // Get all work sessions without work order (maintenance work)
      const params = {};
      if (startDate) params.startDate = startDate;
      if (endDate) params.endDate = endDate;
      
      const response = await workSessionsAPI.getHistory(params);
      
      // Filter sessions that don't have work_order_id (maintenance work)
      const maintenanceWork = response.data.filter(session => !session.work_order_id && session.category_name);
      setMaintenanceSessions(maintenanceWork);
    } catch (error) {
      console.error('Error loading maintenance sessions:', error);
      toast.error('Fehler beim Laden der Werkstattpflege-Daten');
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    if (activeTab === 'maintenance') {
      loadMaintenanceSessions();
    }
  }, [activeTab, startDate, endDate]);

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="flex justify-between items-center">
        <h1 className="text-3xl font-bold text-gray-900">Aufträge</h1>
        {activeTab === 'orders' && (
          <button
            onClick={handleCreateOrder}
            className="btn btn-primary"
          >
            <Plus className="w-4 h-4 mr-2" />
            Neuer Auftrag
          </button>
        )}
      </div>

      {/* Tab Navigation */}
      <div className="bg-white rounded-lg shadow">
        <div className="border-b border-gray-200">
          <nav className="flex space-x-8 px-6" aria-label="Tabs">
            <button
              onClick={() => setActiveTab('orders')}
              className={`py-4 px-1 border-b-2 font-medium text-sm ${
                activeTab === 'orders'
                  ? 'border-primary-500 text-primary-600'
                  : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
              }`}
            >
              <Tag className="w-4 h-4 mr-2 inline" />
              Aufträge
            </button>
            <button
              onClick={() => setActiveTab('maintenance')}
              className={`py-4 px-1 border-b-2 font-medium text-sm ${
                activeTab === 'maintenance'
                  ? 'border-primary-500 text-primary-600'
                  : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
              }`}
            >
              <UserCheck className="w-4 h-4 mr-2 inline" />
              Werkstattpflege & Interne Arbeiten
            </button>
          </nav>
        </div>
      </div>

      {/* Filters */}
      {activeTab === 'orders' && (
        <div className="bg-white rounded-lg shadow p-6">
          <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">Suche</label>
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-4 h-4" />
              <input
                type="text"
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="form-input pl-10"
                placeholder="Auftragsnummer, Beschreibung..."
              />
            </div>
          </div>
          
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">Status</label>
            <select
              value={statusFilter}
              onChange={(e) => setStatusFilter(e.target.value)}
              className="form-select"
            >
              <option value="all">Alle Status</option>
              <option value="created">Erstellt</option>
              <option value="in_progress">In Bearbeitung</option>
              <option value="completed">Abgeschlossen</option>
              <option value="on_hold">Wartend</option>
              <option value="cancelled">Storniert</option>
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">Priorität</label>
            <select
              value={priorityFilter}
              onChange={(e) => setPriorityFilter(e.target.value)}
              className="form-select"
            >
              <option value="all">Alle Prioritäten</option>
              <option value="urgent">Dringend</option>
              <option value="high">Hoch</option>
              <option value="normal">Normal</option>
              <option value="low">Niedrig</option>
            </select>
          </div>

          <div className="flex items-end">
            <button
              onClick={loadOrders}
              className="btn btn-secondary w-full"
            >
              Aktualisieren
            </button>
          </div>
        </div>
      )}

      {/* Maintenance Date Filters */}
      {activeTab === 'maintenance' && (
        <div className="bg-white rounded-lg shadow p-6">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Von Datum</label>
              <input
                type="date"
                value={startDate}
                onChange={(e) => setStartDate(e.target.value)}
                className="form-input"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Bis Datum</label>
              <input
                type="date"
                value={endDate}
                onChange={(e) => setEndDate(e.target.value)}
                className="form-input"
              />
            </div>
            <div className="flex items-end">
              <button
                onClick={() => {
                  setStartDate('');
                  setEndDate('');
                }}
                className="btn btn-secondary"
              >
                Filter zurücksetzen
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Orders List */}
      {activeTab === 'orders' && (
        <div className="bg-white rounded-lg shadow overflow-hidden">
          {loading ? (
            <div className="p-8 text-center">
              <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500 mx-auto"></div>
              <p className="mt-2 text-gray-600">Lade Aufträge...</p>
            </div>
          ) : filteredOrders.length === 0 ? (
            <div className="p-8 text-center text-gray-500">
              <p>Keine Aufträge gefunden</p>
            </div>
          ) : (
            <div className="overflow-x-auto">
              <table className="min-w-full divide-y divide-gray-200">
                <thead className="bg-gray-50">
                  <tr>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Auftrag
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Kategorie
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Status
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Priorität
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Zugewiesen an
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Stunden (Geplant)
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Aktionen
                    </th>
                  </tr>
                </thead>
                <tbody className="bg-white divide-y divide-gray-200">
                  {filteredOrders.map((order) => (
                    <tr key={order.id} className="hover:bg-gray-50">
                      <td className="px-6 py-4 whitespace-nowrap">
                        <div>
                          <div className="text-sm font-medium text-gray-900">
                            {order.order_number}
                          </div>
                          <div className="text-sm text-gray-500">
                            {order.description?.substring(0, 40)}
                            {order.description?.length > 40 ? '...' : ''}
                          </div>
                        </div>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        {order.category_name ? (
                          <div className="flex items-center">
                            <div 
                              className="w-3 h-3 rounded-full mr-2"
                              style={{ backgroundColor: order.category_color }}
                            ></div>
                            <span className="text-sm text-gray-900">{order.category_name}</span>
                          </div>
                        ) : (
                          <span className="text-sm text-gray-500">-</span>
                        )}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        <span className={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${getStatusColor(order.status)}`}>
                          {order.status}
                        </span>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        <span className={`text-sm font-medium ${getPriorityColor(order.priority)}`}>
                          {order.priority}
                        </span>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        <div className="text-sm text-gray-900">
                          {order.assigned_to_name ? (
                            <div className="flex items-center">
                              <User className="w-4 h-4 mr-1 text-gray-500" />
                              <span className="font-medium">{order.assigned_to_name}</span>
                              <span className="ml-1 text-xs text-gray-500 capitalize">({order.assigned_to_role === 'employee' ? 'Monteur' : order.assigned_to_role})</span>
                            </div>
                          ) : (
                            <span className="text-gray-500 text-sm">Nicht zugewiesen</span>
                          )}
                        </div>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        <div className="text-sm text-gray-900">
                          {order.estimated_hours ? (
                            <div>
                              <div className="font-medium">{formatPreciseDuration(order.estimated_hours * 3600)} geplant</div>
                              <div className="text-xs text-gray-500">
                                {formatPreciseDuration(order.total_worked_minutes * 60)} gearbeitet
                              </div>
                              {/* Progress Bar */}
                              <div className="mt-2">
                                {(() => {
                                  const estimatedMinutes = order.estimated_hours * 60;
                                  const workedMinutes = order.total_worked_minutes || 0;
                                  const percentage = estimatedMinutes > 0 ? Math.round((workedMinutes / estimatedMinutes) * 100) : 0;
                                  const isOvertime = percentage > 100;
                                  
                                  return (
                                    <div>
                                      <div className="flex justify-between text-xs mb-1">
                                        <span className={`font-medium ${isOvertime ? 'text-red-600' : 'text-blue-600'}`}>
                                          {percentage}%
                                        </span>
                                        {isOvertime && (
                                          <span className="text-red-500 font-medium">
                                            +{formatPreciseDuration((workedMinutes - estimatedMinutes) * 60)} Überzeit
                                          </span>
                                        )}
                                      </div>
                                      <div className="w-full bg-gray-200 rounded-full h-2">
                                        <div 
                                          className={`h-2 rounded-full transition-all duration-300 ${
                                            isOvertime ? 'bg-red-500' : percentage > 80 ? 'bg-yellow-500' : 'bg-blue-500'
                                          }`}
                                          style={{ 
                                            width: `${Math.min(percentage, 100)}%`,
                                          }}
                                        />
                                        {isOvertime && (
                                          <div 
                                            className="h-2 bg-red-600 opacity-75 -mt-2 rounded-full"
                                            style={{ 
                                              width: `${Math.min(percentage - 100, 50)}%`,
                                              marginLeft: '100%'
                                            }}
                                          />
                                        )}
                                      </div>
                                    </div>
                                  );
                                })()}
                              </div>
                            </div>
                          ) : (
                            <div>
                              <span className="text-gray-500">Nicht geplant</span>
                              {order.total_worked_minutes > 0 && (
                                <div className="text-xs text-gray-500 mt-1">
                                  {formatPreciseDuration(order.total_worked_minutes * 60)} gearbeitet
                                  <div className="w-full bg-gray-200 rounded-full h-2 mt-1">
                                    <div className="h-2 bg-gray-400 rounded-full w-full" />
                                  </div>
                                </div>
                              )}
                            </div>
                          )}
                        </div>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                        <button
                          onClick={() => handleViewOrder(order)}
                          className="text-blue-600 hover:text-blue-900"
                        >
                          <Eye className="w-4 h-4" />
                        </button>
                        <button
                          onClick={() => handleEditOrder(order)}
                          className="text-indigo-600 hover:text-indigo-900"
                          title="Auftrag bearbeiten"
                        >
                          <Edit className="w-4 h-4" />
                        </button>
                        <button
                          onClick={() => handleDeleteOrder(order)}
                          className="text-red-600 hover:text-red-900"
                          title="Auftrag löschen"
                        >
                          <Trash2 className="w-4 h-4" />
                        </button>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )}
        </div>
      )}

      {/* Order Details Modal */}
      {selectedOrder && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div className="p-6">
              <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-bold text-gray-900">
                  Auftrag {selectedOrder.order_number}
                </h2>
                <button
                  onClick={() => setSelectedOrder(null)}
                  className="text-gray-500 hover:text-gray-700 text-xl"
                >
                  ✕
                </button>
              </div>

              <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <h3 className="text-lg font-semibold text-gray-800 mb-3">Auftragsdaten</h3>
                  <div className="space-y-2">
                    <div><strong>Beschreibung:</strong> {selectedOrder.description}</div>
                    <div><strong>Status:</strong> 
                      <span className={`ml-2 px-2 py-1 text-xs rounded-full ${getStatusColor(selectedOrder.status)}`}>
                        {selectedOrder.status}
                      </span>
                    </div>
                    <div><strong>Kategorie:</strong> 
                      {selectedOrder.category_name ? (
                        <span className="ml-2 inline-flex items-center">
                          <div 
                            className="w-3 h-3 rounded-full mr-1"
                            style={{ backgroundColor: selectedOrder.category_color }}
                          ></div>
                          {selectedOrder.category_name}
                        </span>
                      ) : (
                        <span className="ml-2 text-gray-500">Keine Kategorie</span>
                      )}
                    </div>
                    <div><strong>Priorität:</strong> 
                      <span className={`ml-2 ${getPriorityColor(selectedOrder.priority)}`}>
                        {selectedOrder.priority}
                      </span>
                    </div>
                    <div><strong>Geplante Stunden:</strong> {selectedOrder.estimated_hours || '-'}</div>
                    <div><strong>Geschätzte Kosten:</strong> {selectedOrder.estimated_cost ? `€${selectedOrder.estimated_cost}` : '-'}</div>
                  </div>
                </div>

                <div>
                  <h3 className="text-lg font-semibold text-gray-800 mb-3">Kunde & Fahrzeug</h3>
                  <div className="space-y-2">
                    <div><strong>Kunde:</strong> {selectedOrder.customer_name || '-'}</div>
                    <div><strong>Fahrzeug:</strong> {selectedOrder.vehicle_info || '-'}</div>
                    <div><strong>Kennzeichen:</strong> {selectedOrder.license_plate || '-'}</div>
                    <div><strong>Kilometerstand:</strong> {selectedOrder.mileage || '-'}</div>
                  </div>
                </div>
              </div>

              <div>
                <h3 className="text-lg font-semibold text-gray-800 mb-3">Arbeitszeiten</h3>
                {orderSessions.length === 0 ? (
                  <p className="text-gray-500">Noch keine Arbeitszeiten erfasst</p>
                ) : (
                  <>
                    {/* Summary */}
                    <div className="mb-4 p-4 bg-blue-50 rounded-lg">
                      <div className="flex justify-between items-center">
                        <span className="text-sm font-medium text-blue-800">
                          Gesamtarbeitszeit:
                        </span>
                        <span className="text-lg font-bold text-blue-900">
                          {(() => {
                            const totalMinutes = orderSessions.reduce((sum, session) => {
                              if (session.duration_minutes) {
                                return sum + session.duration_minutes;
                              } else if (session.start_time && session.end_time) {
                                const duration = Math.floor((new Date(session.end_time) - new Date(session.start_time)) / (1000 * 60));
                                return sum + duration;
                              } else if (session.start_time) {
                                // Active session
                                const duration = Math.floor((new Date() - new Date(session.start_time)) / (1000 * 60));
                                return sum + duration;
                              }
                              return sum;
                            }, 0);
                            return formatDuration(totalMinutes);
                          })()}
                        </span>
                      </div>
                      <div className="mt-2 flex justify-between items-center text-sm text-blue-700">
                        <span>Anzahl Sitzungen: {orderSessions.length}</span>
                        <span>Mitarbeiter: {[...new Set(orderSessions.map(s => s.user_id))].length}</span>
                      </div>
                    </div>

                    <div className="overflow-x-auto">
                      <table className="min-w-full divide-y divide-gray-200">
                        <thead className="bg-gray-50">
                          <tr>
                            <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                              Mitarbeiter
                            </th>
                            <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                              Start
                            </th>
                            <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                              Ende
                            </th>
                            <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                              Dauer
                            </th>
                            <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                              Beschreibung
                            </th>
                          </tr>
                        </thead>
                        <tbody className="bg-white divide-y divide-gray-200">
                          {orderSessions.map((session) => (
                            <tr key={session.id}>
                              <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {session.first_name} {session.last_name}
                              </td>
                              <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {new Date(session.start_time).toLocaleString('de-DE')}
                              </td>
                              <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {session.end_time ? new Date(session.end_time).toLocaleString('de-DE') : 'Aktiv'}
                              </td>
                              <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {session.duration_minutes ? formatDuration(session.duration_minutes) : 
                                 session.start_time && session.end_time ? formatDuration(Math.floor((new Date(session.end_time) - new Date(session.start_time)) / (1000 * 60))) :
                                 session.start_time ? formatDuration(Math.floor((new Date() - new Date(session.start_time)) / (1000 * 60))) + ' (aktiv)' : '-'}
                              </td>
                              <td className="px-6 py-4 text-sm text-gray-900">
                                <div>
                                  {session.task_description && (
                                    <div className="mb-1">{session.task_description}</div>
                                  )}
                                  {session.notes && (
                                    <div className="text-xs text-gray-600 p-2 bg-gray-50 rounded border">
                                      {session.notes}
                                    </div>
                                  )}
                                  {!session.task_description && !session.notes && '-'}
                                </div>
                              </td>
                            </tr>
                          ))}
                        </tbody>
                      </table>
                    </div>
                  </>
                )}
              </div>

            </div>
          </div>
        </div>
      )}

      {/* Maintenance Work List */}
      {activeTab === 'maintenance' && (
        <div className="bg-white rounded-lg shadow overflow-hidden">
          {loading ? (
            <div className="p-8 text-center">
              <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500 mx-auto"></div>
              <p className="mt-2 text-gray-600">Lade Werkstattpflege-Daten...</p>
            </div>
          ) : maintenanceSessions.length === 0 ? (
            <div className="p-8 text-center text-gray-500">
              <p>Keine Werkstattpflege-Arbeiten gefunden</p>
              <p className="text-sm mt-1">Versuchen Sie, den Datumsfilter anzupassen</p>
            </div>
          ) : (
            <div className="overflow-x-auto">
              <table className="min-w-full divide-y divide-gray-200">
                <thead className="bg-gray-50">
                  <tr>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Mitarbeiter
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Kategorie
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Datum
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Start
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Ende
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Dauer
                    </th>
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Bemerkungen
                    </th>
                  </tr>
                </thead>
                <tbody className="bg-white divide-y divide-gray-200">
                  {maintenanceSessions.map((session) => (
                    <tr key={session.id} className="hover:bg-gray-50">
                      <td className="px-6 py-4 whitespace-nowrap">
                        <div className="text-sm font-medium text-gray-900">
                          {session.first_name} {session.last_name}
                        </div>
                        <div className="text-sm text-gray-500">
                          #{session.employee_number}
                        </div>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap">
                        <span className="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          {session.category_name}
                        </span>
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {new Date(session.start_time).toLocaleDateString('de-DE')}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {new Date(session.start_time).toLocaleTimeString('de-DE', {
                          hour: '2-digit',
                          minute: '2-digit'
                        })}
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {session.end_time 
                          ? new Date(session.end_time).toLocaleTimeString('de-DE', {
                              hour: '2-digit',
                              minute: '2-digit'
                            })
                          : 'Aktiv'
                        }
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {session.duration_minutes ? formatDuration(session.duration_minutes) : '-'}
                      </td>
                      <td className="px-6 py-4 text-sm text-gray-900 max-w-xs">
                        {session.notes ? (
                          <div className="text-xs text-gray-600 p-2 bg-gray-50 rounded border">
                            {session.notes}
                          </div>
                        ) : (
                          '-'
                        )}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )}
        </div>
      )}

      {/* Create Order Modal */}
      {showCreateModal && (
        <CreateOrderModal 
          onClose={() => setShowCreateModal(false)}
          onSuccess={() => {
            setShowCreateModal(false);
            loadOrders();
          }}
        />
      )}

      {/* Edit Order Modal */}
      {showEditModal && (
        <EditOrderModal 
          order={editingOrder}
          onClose={() => {
            setShowEditModal(false);
            setEditingOrder(null);
          }}
          onSuccess={() => {
            setShowEditModal(false);
            setEditingOrder(null);
            loadOrders();
          }}
        />
      )}
    </div>
  );
};

// CreateOrderModal Component
const CreateOrderModal = ({ onClose, onSuccess }) => {
  const [formData, setFormData] = useState({
    order_number: '',
    description: '',
    priority: 'normal',
    estimated_time: '01:00:00',
    estimated_cost: '',
    customer_name: '',
    category_id: '',
    assigned_to: ''
  });
  const [loading, setLoading] = useState(false);
  const [workOrderCategories, setWorkOrderCategories] = useState([]);
  const [assignableUsers, setAssignableUsers] = useState([]);

  useEffect(() => {
    loadWorkOrderCategories();
    loadAssignableUsers();
  }, []);

  const loadWorkOrderCategories = async () => {
    try {
      const response = await workOrderCategoriesAPI.getActive();
      setWorkOrderCategories(response.data?.data || response.data || []);
    } catch (error) {
      console.error('Error loading work order categories:', error);
    }
  };

  const loadAssignableUsers = async () => {
    try {
      const response = await workOrdersAPI.getAssignableUsers();
      setAssignableUsers(response.data?.data || response.data || []);
    } catch (error) {
      console.error('Error loading assignable users:', error);
    }
  };

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: value
    }));
  };

  const generateOrderNumber = () => {
    const year = new Date().getFullYear();
    const randomNum = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
    return `WO${year}${randomNum}`;
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);

    try {
      const orderData = {
        ...formData,
        order_number: formData.order_number || generateOrderNumber(),
        category_id: formData.category_id ? parseInt(formData.category_id) : null,
        assigned_to: formData.assigned_to ? parseInt(formData.assigned_to) : null,
        estimated_hours: formData.estimated_time ? timeToSeconds(formData.estimated_time) / 3600 : null,
        estimated_cost: formData.estimated_cost ? parseFloat(formData.estimated_cost) : null
      };

      await workOrdersAPI.create(orderData);
      toast.success('Auftrag erfolgreich erstellt!');
      onSuccess();
    } catch (error) {
      const errorMessage = error.response?.data?.error || 'Fehler beim Erstellen des Auftrags';
      toast.error(errorMessage);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div className="p-6">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-xl font-bold text-gray-900">Neuen Auftrag erstellen</h2>
            <button
              onClick={onClose}
              className="text-gray-500 hover:text-gray-700 text-xl"
            >
              ✕
            </button>
          </div>

          <form onSubmit={handleSubmit} className="space-y-4">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Auftragsnummer
                </label>
                <input
                  type="text"
                  name="order_number"
                  value={formData.order_number}
                  onChange={handleInputChange}
                  className="form-input"
                  placeholder="Automatisch generiert"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Kategorie
                </label>
                <select
                  name="category_id"
                  value={formData.category_id}
                  onChange={handleInputChange}
                  className="form-select"
                >
                  <option value="">Keine Kategorie</option>
                  {workOrderCategories.map(cat => (
                    <option key={cat.id} value={cat.id}>
                      {cat.name}
                    </option>
                  ))}
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Zugewiesen an
                </label>
                <select
                  name="assigned_to"
                  value={formData.assigned_to}
                  onChange={handleInputChange}
                  className="form-select"
                >
                  <option value="">Nicht zugewiesen</option>
                  {assignableUsers.map(user => (
                    <option key={user.id} value={user.id}>
                      {user.first_name} {user.last_name} ({user.role === 'employee' ? 'Monteur' : user.role})
                    </option>
                  ))}
                </select>
              </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Beschreibung *
              </label>
              <textarea
                name="description"
                value={formData.description}
                onChange={handleInputChange}
                className="form-input"
                rows={3}
                placeholder="Beschreibung der Arbeiten..."
                required
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Kunde
              </label>
              <input
                type="text"
                name="customer_name"
                value={formData.customer_name}
                onChange={handleInputChange}
                className="form-input"
                placeholder="Kundenname (optional)"
              />
            </div>

            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Priorität
                </label>
                <select
                  name="priority"
                  value={formData.priority}
                  onChange={handleInputChange}
                  className="form-select"
                >
                  <option value="low">Niedrig</option>
                  <option value="normal">Normal</option>
                  <option value="high">Hoch</option>
                  <option value="urgent">Dringend</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Geplante Zeit (HH:MM:SS) *
                </label>
                <input
                  type="time"
                  name="estimated_time"
                  value={formData.estimated_time}
                  onChange={handleInputChange}
                  className="form-input"
                  step="1"
                  required
                />
                <p className="text-xs text-gray-500 mt-1">
                  Präzise Zeitangabe für die Fortschrittsverfolgung (Stunden:Minuten:Sekunden)
                </p>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">
                  Geschätzte Kosten (€)
                </label>
                <input
                  type="number"
                  name="estimated_cost"
                  value={formData.estimated_cost}
                  onChange={handleInputChange}
                  className="form-input"
                  min="0"
                  step="0.01"
                  placeholder="z.B. 150.00"
                />
              </div>
            </div>

            <div className="flex justify-end space-x-3 pt-4">
              <button
                type="button"
                onClick={onClose}
                className="btn btn-secondary"
              >
                Abbrechen
              </button>
              <button
                type="submit"
                disabled={loading}
                className="btn btn-primary"
              >
                {loading ? 'Erstelle...' : 'Auftrag erstellen'}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  );
};

